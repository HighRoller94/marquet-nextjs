generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type OrderProducts {
  id            String   @map("_id") @db.ObjectId
  brand         String
  createdAt     DateTime @db.Date
  desc          String
  discount      Boolean
  discountValue String
  gallery       String[]
  name          String
  price         String
  /// Multiple data types found: Int: 50%, BigInt: 50% out of 2 sampled entries
  quantity      Json
  sizeSelected  String
  sizes         String[]
  type          String
  updatedAt     DateTime @db.Date
}

model Order {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  address        String
  deliveryDate   String
  email          String
  name           String
  orderDate      String
  orderReference String
  products       OrderProducts[]
  total          String
}

model Product {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  brand         String
  createdAt     DateTime @db.Date
  desc          String
  discount      Boolean
  discountValue String?
  gallery       String[]
  name          String
  price         String
  sizes         String[]
  type          String
  updatedAt     DateTime @db.Date
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  /// Field referred in an index, but found no data to define the type.
  email Json?  @unique
}
